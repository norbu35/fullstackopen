{
    "include": [
        "./**/*"
    ],
    "exclude": [
        // "./02/**/*"
    ],
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es3",
        "module": "es6",
        "outDir": "./dist",
        "allowJs": true,
        "removeComments": true,
        "noEmitOnError": true,
        "alwaysStrict": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@": ["./src"]
        },
    }
}